@using static TemaCrm.Controllers.CariSecController;
@model List<AlsaDeta>


@{
    ViewData["Title"] = "SutTopla";
    Layout = "~/Views/Panel/_Panel.cshtml";
}

<br />

 
       

        <ul class="nav nav-tabs">
            <li class="nav-item">
                <a href="#Icerik" data-bs-toggle="tab" aria-expanded="false" class="nav-link active">
                    Süt Alış bilgileri
                </a>
            </li>
            <li class="nav-item">
                <a href="#aciklama" data-bs-toggle="tab" aria-expanded="true" class="nav-link">
                    Açıklama
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="Icerik">

                <h5 class="mb-3 text-uppercase bg-light p-2"><i class="mdi mdi-office-building me-1"></i>  @ViewBag.CARI_UNVANI (@ViewBag.CARI_KOD) </h5>
                @if (ViewBag.HataMesage != "0")
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <strong>Uyarı !</strong>  @ViewBag.HataMesage
                    </div>
                }


                <div class="row mb-3">
                    <div class="col-lg-6">
                        <label for="example-select" class="form-label">Süt Toplama Zamanı</label>
                        <select class="form-select" id="example-select">
                            <option>Sabah</option>
                            <option>Öğlen</option>
                            <option>Akşam</option>
                            <option>Diğeri</option>
                        </select>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <a href="/CariSec/UrunAdd/?ALISSATIS_NO=@ViewBag.ALISSATIS_NO&CARI_NO=@ViewBag.CARI_NO" class="btn btn-danger btn-sm">+ Ürün Seç</a>
                    <button type="button" class="btn btn-primary btn-sm"><span class="mdi mdi-file-document-edit-outline"> Yazdır</span></button>

                </div>

                <div class="table-responsive">



                    <div data-simplebar style="max-height: 450px;">
                        @foreach (var item in Model)
                        {
                            <b class="badge text-white bg-success"># @item.ALISSATIS_DETAY_NO </b>
                            <h6><span>(@item.STOK_NO) </span> <b>@item.STOK_ADI </b> </h6>

                            <b class="badge text-dark bg-warning">Fiyatı : @item.LISTE_FIYATI ₺ </b>
                            <b class="badge text-dark bg-warning">  @item.MIKTAR &nbsp;/&nbsp; @item.BIRIM</b>
                            <br />
                            <b class="badge text-white bg-dark">Genel Toplam : @item.GENEL_TOPLAM ₺ </b>


                            <i class="float-end">
                                <div class="input-group">
                                    <button class="btn input-group-text btn-success btn-xs waves-effect waves-light" type="button">Mik +</button>
                                    <button class="btn input-group-text btn-danger btn-xs waves-effect waves-light" type="button">Mik -</button>
                                    <button class="btn input-group-text btn-blue btn-xs waves-effect waves-light" type="button">Güncelle</button>
                                    <button class="btn input-group-text btn-dark btn-xs waves-effect waves-light" type="button">Sil</button>
                                </div>

                            </i> 
                            <hr />
                        }  
                    </div>
                </div>

            </div>
            <div class="tab-pane show" id="aciklama">
                <div class="mb-3">
                    <label for="example-textarea" class="form-label">Açıklama</label>

                    @Html.TextBox("ACIKLAMA",1, new { @class="form-control form-control-sm",type="text", rows="5"})
                </div>
            </div>
        </div> 

<script>
    $('#AlsaDetaMain').DataTable({
        "language": {
            "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json",
        },
        "pageLength": 10,
        "order": [],
        "autoWidth": false
    });

</script>

<script src="~/assets/libs/datatables.net/js/jquery.dataTables.min.js"></script>
<script src="~/assets/libs/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
